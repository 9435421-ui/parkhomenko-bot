# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here

# --- AI ---
# Router AI: одного ключа достаточно (чат + генерация изображений). Опционально — Яндекс АРТ для картинок.
# Генерация изображений: везде без текста на картинке (no text) — меньше ошибок ИИ на русском.

# Yandex Cloud (персональные данные, РФ законодательство, акты; опционально — Яндекс АРТ для изображений)
YANDEX_API_KEY=your_yandex_api_key_here
FOLDER_ID=your_yandex_folder_id_here

# Обязательные хэштеги в постах (канал, VK)
CONTENT_HASHTAGS=#TERION #перепланировка #недвижимость #москва

# Router AI — один ключ для чата и картинок
ROUTER_AI_KEY=your_router_ai_key_here
# Опционально: эндпоинт и модели
# ROUTER_AI_ENDPOINT=https://router.huge.ai/api/chat/completions
# ROUTER_AI_CHAT_MODEL=gpt-4o-mini
# ROUTER_AI_CHAT_FALLBACK=qwen
# ROUTER_AI_IMAGE_KEY=  (если не задан — используется ROUTER_AI_KEY)

# Database Configuration
DATABASE_PATH=database/bot.db

# Рабочая группа: сюда приходят отчёт шпиона и карточки лидов
LEADS_GROUP_CHAT_ID=-1003370698977
# Топики для заявок из квиза: Квартиры, Коммерция, Дома
THREAD_ID_KVARTIRY=2
THREAD_ID_KOMMERCIA=5
THREAD_ID_DOMA=8
# Топик для карточек лидов от шпиона (охота за лидами) — «Горячие лиды» в рабочей группе (из ссылки t.me/c/3370698977/811)
THREAD_ID_HOT_LEADS=811

# Контент и логи
THREAD_ID_DRAFTS=85
THREAD_ID_SEASONAL=87
THREAD_ID_LOGS=88

# Admin Configuration
ADMIN_ID=your_admin_user_id_here
# Юлия: полный доступ к /stats, /hunt и админ-меню (если не задан — по умолчанию 8438024806 в config)
JULIA_USER_ID=8438024806

# Channel Configuration
CHANNEL_ID=@your_channel_id_here

# Mini App Configuration
MINI_APP_URL=https://your-domain.com/mini_app/

# VK API (публикация и Scout/LeadHunter — парсинг групп)
# Токен: ключ доступа приложения VK или сервисный ключ с правами wall,offline
VK_TOKEN=your_vk_access_token_here
VK_GROUP_ID=235569022
# Опционально: токен пользователя для groups.search (поиск новых групп)
VK_USER_TOKEN=

# === SCOUT PARSER / LEAD HUNTER ===
# Включение/выключение шпиона
SCOUT_ENABLED=true
# Интервал сканирования в секундах (по умолчанию 1800 = 30 минут)
SCOUT_PARSER_INTERVAL=1800
# Лимит сообщений для сканирования в Telegram канале
SCOUT_TG_MESSAGES_LIMIT=50
# Сколько постов проверять на комментарии в VK
SCOUT_VK_POSTS_FOR_COMMENTS=10
# Сколько комментариев брать из каждого поста VK
SCOUT_VK_COMMENTS_PER_POST=30
# Пропускать старые сообщения (0 = использовать last_post_id для инкрементального поиска)
SPY_SKIP_OLD_MESSAGES=0
# Приоритетные чаты (перемещаются в начало списка)
SPY_PREFERRED_CHATS=Династия,Зиларт
# Отладочный режим (логирование первых N сообщений)
SCOUT_DEBUG=false
SCOUT_DEBUG_LIMIT=10

# Telegram каналы для сканирования (детальная настройка)
# SCOUT_TG_CHANNEL_1_ID=-1001234567890
# SCOUT_TG_CHANNEL_1_NAME=Название канала
# SCOUT_TG_CHANNEL_1_GEO=Москва/МО
# ... и так далее до SCOUT_TG_CHANNEL_10_*

# Или списком через запятую
SCOUT_TG_CHANNELS=
SCOUT_TG_KEYWORDS=перепланировка,согласование,узаконить,МЖИ,предписание

# VK группы для сканирования
SCOUT_VK_GROUPS=
SCOUT_VK_KEYWORDS=перепланировка,согласование,перепланировка квартиры,узаконить перепланировку

# Общие ключевые слова для Discovery (поиск новых источников)
SCOUT_KEYWORDS=перепланировка,согласование,узаконить,МЖИ,предписание,БТИ,проект перепланировки

# Собственные каналы TERION (исключаются из сканирования)
OWN_CHANNEL_IDS=-1003612599428,-1002628548032

# MAX.ru — публикация в канал (Device Token из приложения MAX)
MAX_DEVICE_TOKEN=
# Опционально: id канала, если не подхватывается из API /subsite/me
